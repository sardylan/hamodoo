<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_ham_website_tree">
            <field name="name">view.ham.website.tree</field>
            <field name="model">ham.website</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tag"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_ham_website_form">
            <field name="name">view.ham.website.form</field>
            <field name="model">ham.website</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group string="Integration">
                            <field name="tag"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_ham_website_search">
            <field name="name">view.ham.website.search</field>
            <field name="model">ham.website</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="tag"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
