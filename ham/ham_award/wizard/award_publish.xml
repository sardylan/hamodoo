        <record model="ir.ui.view" id="view_ham_wizard_award_publish">
            <field name="name">view.ham.wizard.award.publish</field>
            <field name="model">ham.wizard.award.publish</field>
            <field name="arch" type="xml">
                <form string="Award QSOs Publish" create="false" edit="false" delete="false">
                    <group>
                        <field name="award_id"/>
                    </group>
                    <group>
                        <field name="callsign_id"
