<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <template id="template_award_single" name="Single award">
            <t t-call="portal.portal_layout">
                <t t-set="additional_title">
                    <t t-esc="award_id.name"/>
                </t>
                <t t-if="upload_ids" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Date &amp; Time</th>
                            <th>Filename</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="upload_ids" t-as="upload_id">
                            <tr>
                                <td>
                                    <strong>
                                        <t t-esc="upload_id.ts"/>
                                    </strong>
                                </td>
                                <td>
                                    <em>
                                        <t t-esc="upload_id.file_name"/>
                                    </em>
                                </td>
                                <td>
                                    <a t-att-href="'/ham_award/upload/file_content/%d' % upload_id.id">
                                        <span class="fa fa-download"/>
                                    </a>
<!--                                    <a t-att-href="'/ham_award/upload/delete/%d' % upload_id.id">-->
<!--                                        <span class="fa fa-close"/>-->
<!--                                    </a>-->
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
                <div t-else="">
                    <p>There are no uploads for your account.</p>
                </div>
            </t>
        </template>

    </data>
</odoo>
