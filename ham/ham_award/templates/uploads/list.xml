<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <template id="template_uploads_list" name="Uploads List">
            <t t-call="portal.portal_layout">
                <t t-set="additional_title">Uploads</t>
                <div t-if="upload_ids">
                    <ul>
                        <t t-foreach="upload_ids" t-as="upload_id">
                            <li>
                                <t t-esc="upload_id.ts"/>
                            </li>
                        </t>
                    </ul>
                </div>
                <div t-else="">
                    <p>There are no uploads for your account.</p>
                </div>
                <form action="/ham_award/uploads" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="row o_portal_details">
                        <div class="col-lg-8">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div t-if="error_message" class="alert alert-danger" role="alert">
                                        <t t-foreach="error_message" t-as="err">
                                            <t t-esc="err"/>
                                            <br/>
                                        </t>
                                    </div>
                                </div>
                                <div t-attf-class="form-group #{error.get('adif_file') and 'o_has_error' or ''} col-xl-6">
                                    <label class="col-form-label" for="adif_file">ADIF File</label>
                                    <input type="file" name="adif_file"
                                           t-attf-class="form-control #{error.get('adif_file') and 'is-invalid' or ''}"
                                           t-att-value="adif_file"/>
                                </div>

                                <div class="clearfix"/>
                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                            </div>
                            <div class="clearfix">
                                <button type="submit" class="btn btn-primary float-right mb32 ">
                                    Upload
                                    <span class="fa fa-long-arrow-right"/>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </t>
        </template>

    </data>
</odoo>
