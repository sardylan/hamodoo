<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_award_tree">
            <field name="name">view_award_tree</field>
            <field name="model">ham_award.award</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ts_start"/>
                    <field name="ts_end"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_award_form">
            <field name="name">view_award_form</field>
            <field name="model">ham_award.award</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group string="Infos">
                            <field name="common_callsign"/>
                            <field name="ts_end"/>
                        </group>
                        <group string="Date &amp; Time" col="4">
                            <field name="ts_start"/>
                            <field name="ts_end"/>
                        </group>
                        <group string="Operators">
                            <field name="operator_ids"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_award_search">
            <field name="name">view_award_search</field>
            <field name="model">ham_award.award</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <separator/>
                    <field name="ts_start"/>
                    <field name="ts_end"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
