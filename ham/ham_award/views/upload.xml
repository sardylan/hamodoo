<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_upload_tree">
            <field name="name">view_upload_tree</field>
            <field name="model">ham_award.upload</field>
            <field name="arch" type="xml">
                <tree decoration-primary="status == 'draft'"
                      decoration-danger="status == 'error'">
                    <field name="file_name" invisible="1"/>
                    <field name="ts"/>
                    <field name="file_content" filename="file_name"/>
                    <field name="award_id"/>
                    <field name="operator_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_upload_form">
            <field name="name">view_upload_form</field>
            <field name="model">ham_award.upload</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object"
                                name="action_parse"
                                string="Parse"
                                default_focus="1"
                                confirm="Proceed with ADIF parsing?"
                                class="btn-primary"/>
                        <field name="status"
                               widget="statusbar"/>
                    </header>
                    <field name="file_name" invisible="1"/>
                    <sheet>
                        <group>
                            <field name="ts"/>
                            <field name="file_content" filename="file_name"/>
                            <field name="operator_id"/>
                            <field name="award_id"/>
                        </group>
                        <notebook>
                            <page name="page_adif"
                                  string="ADIF">
                                <group>
                                    <field name="headers"
                                           widget="ace"
                                           options="{'mode': 'python'}"/>
                                    <field name="errors"/>
                                </group>
                            </page>
                            <page name="page_adif"
                                  string="QSOs">
                                <field name="qso_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_upload_search">
            <field name="name">view_upload_search</field>
            <field name="model">ham_award.upload</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ts"/>
                    <separator/>
                    <field name="file_name"/>
                    <separator/>
                    <field name="operator_id"/>
                    <separator/>
                    <field name="award_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="status" context="{'group_by': 'status'}"/>
                        <filter string="Awards" name="award" context="{'group_by': 'award_id'}"/>
                        <filter string="Operators" name="award" context="{'group_by': 'operator_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>
