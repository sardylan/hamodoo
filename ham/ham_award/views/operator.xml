<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_operator_tree">
            <field name="name">view_operator_tree</field>
            <field name="model">ham_award.operator</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="callsign"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_operator_form">
            <field name="name">view_operator_form</field>
            <field name="model">ham_award.operator</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_active_toggle"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-file">
                                <field name="active"
                                       widget="boolean_button"
                                       options="{
                                        'terminology': {
                                            'string_true': 'Enabled',
                                            'string_false': 'Disabled',
                                            'hover_true': 'Disable',
                                            'hover_false': 'Enable'
                                        }
                                       }"/>
                            </button>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group string="Infos">
                            <field name="callsign"/>
                            <field name="partner_id"/>
                        </group>
                        <group string="Awards">
                            <field name="award_ids"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_operator_search">
            <field name="name">view_operator_search</field>
            <field name="model">ham_award.operator</field>
            <field name="arch" type="xml">
                <search>
                    <field name="callsign"/>
                    <field name="partner_id"/>
                    <separator/>
                    <field name="award_ids"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
