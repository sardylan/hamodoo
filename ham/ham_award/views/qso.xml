<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_qso_tree">
            <field name="name">view_qso_tree</field>
            <field name="model">ham.award.qso</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="country_id"/>
                    <field name="callsign"/>
                    <field name="ts_start" widget="datetime_tz"/>
                    <field name="frequency"/>
                    <field name="band_id"/>
                    <field name="modulation_id"/>
                    <field name="tx_rst"/>
                    <field name="rx_rst"/>
                    <field name="local_callsign"/>
                    <field name="operator_id"/>
                    <field name="hrdlog_sent"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_qso_form">
            <field name="name">view_qso_form</field>
            <field name="model">ham.award.qso</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object"
                                name="action_set_hrdlog_sent"
                                string="Send to HRDLog"
                                attrs="{'invisible': [('hrdlog_sent', '=', True)]}"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="callsign"/>
                        </h1>
                        <h2>
                            <field name="country_id"/>
                        </h2>
                        <group string="Remote" col="4">
                            <field name="op_name"/>
                            <field name="qth"/>
                        </group>
                        <group string="Date &amp; Time" col="4">
                            <field name="ts_start" widget="datetime_tz"/>
                            <field name="ts_end" widget="datetime_tz"/>
                        </group>
                        <group string="Technical data" col="4">
                            <field name="frequency"/>
                            <field name="rx_frequency"/>
                            <field name="modulation_id"/>
                            <field name="band_id"/>
                        </group>
                        <group string="Reports" col="4">
                            <field name="tx_rst"/>
                            <field name="rx_rst"/>
                        </group>
                        <group string="Local informations" col="4">
                            <field name="operator_id"/>
                            <field name="local_callsign"/>
                        </group>
                        <notebook>
                            <page name="page_others"
                                  string="Others">
                                <group string="Others">
                                    <field name="footprint"/>
                                    <field name="award_id"/>
                                    <field name="upload_id"/>
                                </group>
                            </page>
                            <page name="page_note"
                                  string="Note">
                                <field name="note"/>
                            </page>
                            <page name="page_upload"
                                  string="Uploads to Websites">
                                <group string="Uploads to Websites">
                                    <field name="hrdlog_sent"/>
                                    <field name="hrdlog_ts_sent"/>
                                </group>
                            </page>
                            <!--                            <page name="page_station"-->
                            <!--                                  string="Reference Stations">-->
                            <!--                                <field name="station_ids"/>-->
                            <!--                            </page>-->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_qso_search">
            <field name="name">view_qso_search</field>
            <field name="model">ham.award.qso</field>
            <field name="arch" type="xml">
                <search>
                    <field name="callsign"/>
                    <field name="op_name"/>
                    <field name="qth"/>
                    <separator/>
                    <field name="ts_start"/>
                    <field name="ts_end"/>
                    <separator/>
                    <field name="frequency"/>
                    <field name="band_id"/>
                    <field name="operator_id"/>
                    <field name="local_callsign"/>
                    <separator/>
                    <field name="footprint"/>
                    <field name="award_id"/>
                    <field name="upload_id"/>
                    <group expand="1">
                        <filter string="Local Callsign" name="local_callsign" context="{'group_by': 'local_callsign'}"/>
                        <filter string="Band" name="band_id" context="{'group_by': 'band_id'}"/>
                        <filter string="Upload" name="upload_id" context="{'group_by': 'upload_id'}"/>
                    </group>
                    <separator/>
                    <group expand="1">
                        <filter string="HRDlog send status" name="hrdlog_sent" context="{'group_by': 'hrdlog_sent'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>
