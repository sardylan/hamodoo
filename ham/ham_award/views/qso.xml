<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_qso_tree">
            <field name="name">view_qso_tree</field>
            <field name="model">ham_award.qso</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="country_id"/>
                    <field name="callsign"/>
                    <field name="ts_start"/>
                    <field name="ts_end"/>
                    <field name="frequency"/>
                    <field name="band_id"/>
                    <field name="modulation_id"/>
                    <field name="tx_rst"/>
                    <field name="rx_rst"/>
                    <field name="award_id"/>
                    <field name="operator_id"/>
                    <field name="upload_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_qso_form">
            <field name="name">view_qso_form</field>
            <field name="model">ham_award.qso</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="callsign"/>
                        </h1>
                        <h2>
                            <field name="country_id"/>
                        </h2>
                        <group string="Remote" col="4">
                            <field name="op_name"/>
                            <field name="qth"/>
                        </group>
                        <group string="Date &amp; Time" col="4">
                            <field name="ts_start"/>
                            <field name="ts_end"/>
                        </group>
                        <group string="Technical data" col="4">
                            <field name="frequency"/>
                            <field name="rx_frequency"/>
                            <field name="modulation_id"/>
                            <field name="band_id"/>
                        </group>
                        <group string="Reports" col="4">
                            <field name="tx_rst"/>
                            <field name="rx_rst"/>
                        </group>
                        <group string="Local informations" col="4">
                            <field name="operator_id"/>
                            <field name="local_callsign"/>
                        </group>
                        <notebook>
                            <page name="page_others"
                                  string="Others">
                                <group string="Others">
                                    <field name="footprint"/>
                                    <field name="award_id"/>
                                    <field name="upload_id"/>
                                </group>
                            </page>
                            <page name="page_note"
                                  string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_qso_search">
            <field name="name">view_qso_search</field>
            <field name="model">ham_award.qso</field>
            <field name="arch" type="xml">
                <search>
                    <field name="callsign"/>
                    <field name="op_name"/>
                    <field name="qth"/>
                    <separator/>
                    <field name="ts_start"/>
                    <field name="ts_end"/>
                    <separator/>
                    <field name="frequency"/>
                    <field name="band_id"/>
                    <field name="operator_id"/>
                    <field name="local_callsign"/>
                    <separator/>
                    <field name="footprint"/>
                    <field name="award_id"/>
                    <field name="upload_id"/>
                    <group expand="1">
                        <filter string="Band" name="band_id" context="{'group_by': 'band_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>
