<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_modulation_tree">
            <field name="name">view_modulation_tree</field>
            <field name="model">hamutility.modulation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emission"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_modulation_form">
            <field name="name">view_modulation_form</field>
            <field name="model">hamutility.modulation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name" class="w-50"/>
                        </h1>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="modulation" class="w-50"/>
                            <field name="signal" class="w-50"/>
                            <field name="information" class="w-50"/>
                            <field name="bandwidth" class="w-50"/>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_modulation_search">
            <field name="name">view_modulation_search</field>
            <field name="model">hamutility.modulation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <separator/>
                    <field name="modulation"/>
                    <field name="signal"/>
                    <field name="information"/>
                    <field name="bandwidth"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
