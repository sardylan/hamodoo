<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_country_tree">
            <field name="name">view_country_tree</field>
            <field name="model">hamutility.country</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="flag" widget="image"/>
                    <field name="name"/>
                    <field name="prefix_ids"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_country_form">
            <field name="name">view_country_form</field>
            <field name="model">hamutility.country</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group string="General">
                            <field name="res_country_id"/>
                            <field name="flag" widget="image"/>
                        </group>
                        <group string="Prefixes">
                            <field name="prefix_ids"/>
                        </group>
                        <group string="Zones">
                            <field name="cq_zone_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="itu_zone_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_country_search">
            <field name="name">view_country_search</field>
            <field name="model">hamutility.country</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="res_country_id"/>
                    <field name="prefix_ids"/>
                    <field name="cq_zone_ids"/>
                    <field name="itu_zone_ids"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_countryprefix_tree">
            <field name="name">view_countryprefix_tree</field>
            <field name="model">hamutility.countryprefix</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="prefix"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_countryprefix_form">
            <field name="name">view_countryprefix_form</field>
            <field name="model">hamutility.countryprefix</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="prefix"/>
                    </group>
                    <group>
                        <field name="country_id"/>
                        <field name="note"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
